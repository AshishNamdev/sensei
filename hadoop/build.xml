<?xml version="1.0"?>

<project name="order-statistics" basedir="." default="all">
  <property file="build.properties" />

  <property name="name" value="ShardedIndexer" />
  <property name="display.name" value="ShardedIndexer" />
  <property name="author" value="ShardedIndexer author" />
  <property environment="env" />

  <path id="main-classpath">
    <fileset dir="${lib.dir}">
      <include name="*.jar" />
    </fileset>
    <pathelement path="${classes.dir}" />
  </path>

  <!-- set the build number based on environment variable, otherwise blank -->
  <property environment="env" description="System environment variables (including those set by Hudson)"/>
  <condition property="curr.release.snapshot" value="${curr.release}-snapshot-${env.BUILD_NUMBER}" else="${curr.release}">
       <and>
          <isset property="env.BUILD_NUMBER" />
          <not>
              <equals arg1="" arg2="${env.BUILD_NUMBER}" trim="yes"/>
          </not> 
       </and>
  </condition>

  <path id="test-classpath">
    <pathelement path="${env.VOLD_TEST_JARS}" />
    <path refid="main-classpath" />
    <pathelement path="${testclasses.dir}" />
  </path>

  <macrodef name="replace-dir">
    <attribute name="dir" />
    <sequential>
      <delete dir="@{dir}" />
      <mkdir dir="@{dir}" />
    </sequential>
  </macrodef>

  <target name="all" depends="clean, test, srcjar, package" description="Build all artifacts." />

  <target name="clean" description="Delete generated files.">
    <delete dir="${dist.dir}" />
  	<delete dir="${docs.dir}" />
  </target>

  <target name="build" description="Compile main source tree java files">
    <replace-dir dir="${classes.dir}" />
    <javac fork="true" destdir="${classes.dir}" target="1.6" debug="true" deprecation="true" failonerror="true">
      <src path="${java.dir}" />
      <classpath refid="main-classpath" />
    </javac>
  </target>
	
  <target name="jar-with-deps" depends="jar" description="Make a big bad jar containing all jars">
    <delete file="${dist.dir}/${name}-${curr.release}-all.jar"/>
    <jar jarfile="${dist.dir}/${name}-${curr.release}-all.jar" filesetmanifest="merge">
      <zipgroupfileset dir="${lib.dir}" includes="*.jar"/>
      <zipgroupfileset file="${dist.dir}/${name}-${curr.release}.jar" />
    </jar>
  </target>
	
  <target name="package" depends="build, jar-with-deps" description="Build a .zip package containing all pig files, confs, and jars.">
    <replace-dir dir="${package.dir}" />
    <copy todir="${package.dir}">
      <fileset file="${dist.dir}/${name}-${curr.release}-all.jar" />
    </copy>
    <copy todir="${package.dir}" flatten="true">
      <fileset dir="${conf.dir}">
        <include name="**/**/**/**/*.*"/>
      </fileset>
    </copy>
    <copy todir="${package.dir}/${src.dir}">
      <fileset dir="${src.dir}" />
    </copy>
    <zip destfile="${dist.dir}/${name}-${curr.release}.zip" basedir="${package.dir}" />
  </target>

  <target name="buildtest" description="Compile test classes">
    <mkdir dir="${unittestsrc.dir}" />  
    <mkdir dir="${inttestsrc.dir}" />    
    <replace-dir dir="${testclasses.dir}" />
    <javac destdir="${testclasses.dir}" target="1.6" debug="true" deprecation="true" failonerror="true">
      <src path="${unittestsrc.dir}" />
      <src path="${inttestsrc.dir}" />
      <classpath refid="main-classpath" />
    </javac>
  </target>

  <target name="test" depends="build, buildtest" description="Build test jar file">
    <jar destfile="${dist.dir}/${name}-test-${curr.release}.jar">
      <fileset dir="${testclasses.dir}" />
    </jar>
  </target>
  
  <target name="jar" depends="build" description="Build jar file">
    <jar destfile="${dist.dir}/${name}-${curr.release}.jar">
      <fileset dir="${classes.dir}">
        <include name="**/*.*" />
      </fileset>
    </jar>
  </target>

  <target name="srcjar" description="Build source jar file">
    <mkdir dir="${dist.dir}" />
    <jar destfile="${dist.dir}/${name}-${curr.release}-src.jar">
      <fileset dir="${java.dir}">
        <include name="**/*.java" />
      </fileset>
    </jar>
  </target>
  
  <macrodef name="create-release-artifacts">
    <attribute name="version" />
    <sequential>
    <antcall target="all"/>
    <zip destfile="${dist.dir}/${name}-@{version}.zip">
      <zipfileset dir="." prefix="voldemort-@{version}" filemode="755" includes="bin/*"/>
      <zipfileset dir="." prefix="voldemort-@{version}" includes="**">
        <exclude name="${dist.dir}/*classes"/>
        <exclude name="bin/*"/>
      </zipfileset>
    </zip>
    <tar destfile="${dist.dir}/${name}-@{version}.tar.gz" compression="gzip" longfile="gnu">
      <tarfileset dir="." prefix="voldemort-@{version}" filemode="755" includes="bin/*"/>
      <tarfileset dir="." prefix="voldemort-@{version}" includes="**">
        <exclude name="${dist.dir}/*classes"/>
        <exclude name="${dist.dir}/*.zip"/>
        <exclude name="bin/*"/>
      </tarfileset>
    </tar>
    </sequential>
  </macrodef>

  <target name="snapshot"  description="Create a release-snapshot zip file with everything pre-built.">
    <create-release-artifacts version="${curr.release.snapshot}" />
  </target>
  
  <target name="release" description="Create a release zip file with everything pre-built.">
    <create-release-artifacts version="${curr.release}" />
  </target>

  <target name="junit" depends="build, buildtest" description="Run junit tests.">
    <replace-dir dir="${testreport.dir}" />
    <replace-dir dir="${testhtml.dir}" />
    <junit printsummary="yes" showoutput="true">
      <classpath refid="test-classpath" />
      <formatter type="xml" />
      <batchtest fork="yes" todir="${testreport.dir}">
        <fileset dir="${unittestsrc.dir}">
          <include name="**/*Test.java" />
        </fileset>
        <fileset dir="${inttestsrc.dir}">
          <include name="**/*Test.java" />
          <exclude name="**/*Abstract*Test.java" />
        </fileset>
      </batchtest>
    </junit>
    <junitreport todir="${testhtml.dir}">
      <fileset dir="${testreport.dir}">
        <include name="TEST-*.xml" />
      </fileset>
      <report todir="${testhtml.dir}" format="frames" />
    </junitreport>
  </target>

  <target name="junit-all" depends="junit" description="Run All junit tests.">
  </target>

  <macrodef name="make-javadocs">
    <attribute name="dir" />
    <attribute name="packagenames" />
    <attribute name="javadir" />
    <sequential>
      <replace-dir dir="@{dir}" />
      <javadoc sourcepath="@{javadir}" destdir="@{dir}" windowtitle="${display.name}" source="1.6" author="true" version="true" use="true" packagenames="@{packagenames}">
        <doctitle>${display.name}</doctitle>
        <bottom>${author}</bottom>
        <classpath refid="main-classpath" />
      </javadoc>
    </sequential>
  </macrodef>

  <target name="docs" description="Create complete Javadoc documentation">
    <make-javadocs dir="${javadoc.dir}" packagenames="*" javadir="${java.dir}"/>
  </target>

  <target name="run" depends="all" if="job.name" description="Run a single test specified by -Djob.name=jobName">
    <property environment="env"/>
    <echo message="running Job ${job.name} now..."/>
    <echo message="HADOOP_HOME set to ${env.HADOOP_HOME}"/>
    <java classname="azkaban.jobs.CommandLineJobRunner" fork="true" maxmemory="6G" failonerror="true">
      <jvmarg value="-d64"/>
      <jvmarg value="-server"/>
      <jvmarg value="-Xdebug"/>
      <arg value="-c${package.dir}"/>
      <arg value="-j${package.dir}"/>
      <arg value="${job.name}"/>
      <classpath>
        <pathelement path="${env.HADOOP_HOME}"/>
      	<fileset file="${package.dir}/${name}-${curr.release}-all.jar" />
      </classpath>
    </java>
  </target>
  
  <target name="run2" if="job.name" description="Run a single test specified by -Djob.name=jobName">
    <property environment="env"/>
    <echo message="running Job ${job.name} now..."/>
    <echo message="HADOOP_HOME set to ${env.HADOOP_HOME}"/>
    <java classname="azkaban.jobs.CommandLineJobRunner" fork="true" maxmemory="6G" failonerror="true">
      <jvmarg value="-d64"/>
      <jvmarg value="-server"/>
      <jvmarg value="-Xdebug"/>
      <arg value="-c${package.dir}"/>
      <arg value="-j${package.dir}"/>
      <arg value="${job.name}"/>
      <classpath>
        <pathelement path="${env.HADOOP_HOME}"/>
      	<fileset file="${package.dir}/${name}-${curr.release}-all.jar" />
      </classpath>
    </java>
  </target>

</project>
