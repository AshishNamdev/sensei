{
  // id filter
  
  "ids" : {
  	"values" : ["1","4","100"]
  }	,

  // boolean filter
  "bool" : {
        "must" : {
                 "term" : { "tag" : "wow" }
        },
        "must_not" : {
                 "range" : {
                 "age" : { "from" : 10, "to" : 20 }
                 }
        },
        "should" : [
         {
           "term" : { "tag" : "sometag" }
         },
         {
           "term" : { "tag" : "sometagtag" }
         }
         ]
  },

  // term filter
   "term" : { "color" : "red","_noOptimize" : false},
  
  // query filter
  // see queries.json for a lis of valid queries
  "query" : {
     "query_string" : { 
          "query" : "this AND that OR thus"
      }
  },

  "terms" : {
        "tags" : {
            "values" : [ "blue", "pill" ],
            "excludes" : ["red"],
            "operator" : "or",
            "_noOptimize" : false
        }
        // or
        // "tags" : [ "blue", "pill" ], default operator or
  },

  // range filter
  // see range query
  "range":{
    "age" : { 
            "from" : 10, 
            "to" : 20,
            "_noOptimize" : false
    }
  },

  "custom":{
    "myfilter" : {
      "values" : ["v1","v2"],
      "excludes" : ["v3"],
      "operator" : "or",
      "props" : {}
    }
  },

  // hierarchical path filter
  "path":{
    "value" : "a/b/c",
    "strict" : false,
    "depth" : 1
  }
}

